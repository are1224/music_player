<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="15sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/notifcation_prevButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fast_rewind_black_24dp"
            android:layout_toLeftOf="@id/notification_startButton"/>

        <ImageButton
            android:id="@+id/notification_startButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_play_arrow_black_24dp"
            android:layout_centerInParent="true"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/notification_stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_pause_black_24dp"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/notification_nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fast_forward_black_24dp"
            android:layout_toEndOf="@id/notification_startButton"/>

        <ImageButton
            android:id="@+id/notification_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_clear_black_24dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</LinearLayout>